{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OS Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/i686_debug/kernel/kernel.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "logging": {
                "engineLogging": true
            },
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description":  "Run script",
                    "text": "source ${workspaceFolder}/.vscode/.gdb_script.gdb",
                    "ignoreFailures": false
                }
            ],
            // "customLaunchSetupCommands": [
            //     { "text": "", "description": "", "ignoreFailures": false }
            // ],
            "launchCompleteCommand": "None",
        },
        {
            "name": "(gdb) tools/fat",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/fat.out",
            "args": [ "${workspaceFolder}/build/main_floppy.img", "/mydir/bigtext.txt"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}